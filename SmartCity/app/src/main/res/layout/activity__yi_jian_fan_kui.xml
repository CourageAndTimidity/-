<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Activity_YiJianFanKui"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fb7199"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <ImageView
            android:id="@+id/yijian_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="意见反馈"
            android:textSize="26sp"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">
        <EditText
            android:id="@+id/yijian_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#e7e7e7"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:maxLength="18"
            android:hint="标题"
            android:textColorHint="#7e7e7e"
            android:maxLines="1"
            android:ellipsize="end"/>

        <EditText
            android:id="@+id/yijian_text"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="20dp"
            android:background="#e7e7e7"
            android:hint="内容"
            android:gravity="start"
            android:textColorHint="#7e7e7e"
            android:maxLength="150"
            android:ellipsize="end"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/yijian_btn"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_fen"
            android:text="提交"
            android:textSize="26sp"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>